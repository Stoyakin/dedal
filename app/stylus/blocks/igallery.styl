.igallery
  position relative
  width 100%
  height 600px
  opacity 0
  transition opacity .8s ease-in-out
  transition-delay .5s
  &.video-plays
    .igallery__all-href
      opacity 0
  &.video-paused
    .igallery__all-href
      opacity 1
    .container
      opacity 1
      visibility visible
  @media (max-width: 1024px)
    min-height 400px
    height 400px
  &.start-animate
    opacity 1
  &__all-href
    display inline-block
    width auto
    position absolute
    top 92px
    right calc(50% - 608px)
    text-align right
    white-space nowrap
    color #fff
    font-family DIN W10 Medium,sans-serif
    font-weight 600
    font-size 12px
    letter-spacing 0.08em
    line-height 16px
    text-transform uppercase
    transition opacity .3s ease-in-out
    z-index 2
    &:hover
      opacity .7
    @media (max-width: 1365px)
      right 30px
    @media (max-width: 767px)
      right 20px
      top 52px
  &__slider
    height 100%
    .swiper
      &-container
        height 100%
  .container
    opacity 0
    visibility hidden
    transition opacity .5s ease-in-out, visibility .5s ease-in-out
  &__slide
    position relative
    height 100%
    padding 82px 0
    z-index 1
    @media (max-width: 1365px)
      padding-left 30px
      padding-right 30px
    @media screen and (max-width: 767px)
      padding 40px 0
    &-content
      display flex
      align-items center
      justify-content center
      width 100%
      height 100%
      background no-repeat 50%/cover
      position absolute
      top 0
      left 0
      z-index 2
      opacity 0
      visibility hidden
      transition opacity .5s ease-in-out, visibility .5s ease-in-out
      overflow hidden
    &-top
      max-width 400px
      @media (max-width: 767px)
        max-width 53%
    &-cover
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background no-repeat 50%/cover
      z-index 2
      &--video
        width auto
        height 100%
        left 50%
        transform translateX(-50%)
    &-video
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      width 100%
      height 100%
      z-index -1
      &--hide-controls
        .igallery__slide-content
          opacity 1
          visibility visible
        &+.container
          opacity 1
          visibility visible
      &-item
        width 100%
      video::-webkit-media-controls
        display none
    &-play
      position absolute
      left 50%
      top 50%
      transform translate(-50%, -50%)
      height 104px
      width 104px
      margin-top -3px
      fill transparent
      transition fill .3s ease-in-out
      cursor pointer
      z-index 3
      @media  (max-width: 767px)
        width 80px
        height 80px
      .play-ico__colored
        fill transparent
        transition fill .3s ease-in-out
      &:hover
        .play-ico__colored
          fill #fff
    &-title
      color #fff
      font-family DIN W10 Medium,sans-serif
      font-weight 600
      font-size 32px
      letter-spacing -.015em
      line-height 36px
      @media (max-width: 767px)
        font-size 24px
        line-height 30px
    &-text
      color #fff
      letter-spacing 0.001em
      margin-top 26px
      @media (max-width: 767px)
        display none

  video::-webkit-media-controls
    display none

