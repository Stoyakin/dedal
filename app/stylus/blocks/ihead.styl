.ihead
  height 680px
  .swiper
    &-container
      height 100%
    &-slide
      &-active
        .ihead__item
          &-title, &-subtitle, &-more
            opacity 1
            transform translateY(0)
  &__item
    &-slide
      display flex
      align-items center
      position relative
      /*padding-top 134px*/
      padding-top 205px
      z-index 1
    &-back
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index -1
    &-content
      margin-left 103px
      max-width 800px
    &-title
      color #fff
      font-size 60px
      line-height 60px
      font-weight 600
      letter-spacing -0.037em
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay .8s
      opacity 0
      transform translateY(70px)
    &-subtitle
      color #fff
      font-size 32px
      line-height 40px
      letter-spacing -0.012em
      margin-top 16px
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay 1.2s
      opacity 0
      transform translateY(70px)
    &-more
      display inline-block
      vertical-align top
      color #fff
      font-weight 400
      font-size 12px
      line-height 24px
      margin-top 41px
      margin-left 41px
      letter-spacing 0.08em
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay 1.6s
      text-transform uppercase
      opacity 0
      transform translateY(70px)
      span
        opacity 1
        transition opacity .3s ease-in-out
      &:hover
        span
          opacity .7
