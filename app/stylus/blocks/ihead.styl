.ihead
  height 680px
  @media (max-width: 767px)
    height 482px
  .swiper
    &-container
      height 100%
    &-slide
      &-active
        .ihead__item
          &-title, &-subtitle, &-more
            opacity 1
            transform translateY(0)
    &-buttons-area
      @media (max-width: 1160px)
        display none
  &__item
    &-slide
      display flex
      align-items center
      position relative
      padding-top 205px
      z-index 1
      @media (max-width: 1160px)
        padding-top 135px
      @media (max-width: 767px)
        padding-top 80px
    &-back
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index -1
    &-content
      max-width 65.75%
      margin-left 8.471%
      @media (max-width: 767px)
        max-width 100%
        margin-left 0
    &-title
      color #fff
      font-size 60px
      line-height 60px
      font-family DIN W10 Medium,sans-serif
      font-weight 600
      letter-spacing -0.037em
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay .8s
      opacity 0
      transform translateY(70px)
      @media (max-width: 767px)
        font-size 40px
        line-height 40px
    &-subtitle
      color #fff
      font-family DIN W10 Regular,sans-serif
      font-weight 400
      font-size 32px
      line-height 40px
      letter-spacing -0.012em
      margin-top 16px
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay 1.2s
      opacity 0
      transform translateY(70px)
      @media (max-width: 767px)
        margin-top 20px
        font-size 22px
        line-height 24px
        letter-spacing -.05em
    &-more
      display inline-block
      vertical-align top
      color #fff
      font-family DIN W10 Regular,sans-serif
      font-weight 400
      font-size 12px
      line-height 24px
      margin-top 41px
      margin-left 41px
      letter-spacing 0.08em
      transition transform 1s ease-in-out, opacity 1s ease-in-out
      transition-delay 1.6s
      text-transform uppercase
      opacity 0
      transform translateY(70px)
      @media (max-width: 767px)
        margin-left 0
      span
        opacity 1
        transition opacity .3s ease-in-out
      &:hover
        span
          opacity .7
