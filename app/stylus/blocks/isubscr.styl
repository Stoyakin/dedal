.isubscr
  display flex
  align-items center
  position relative
  width 100%
  height 400px
  color #fff
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  overflow hidden
  &__content
    margin-left 103px
    max-width 800px
  &__title
    text-transform none
    margin-bottom 28px
  &__text
    font-family 'Roboto'
    font-size 16px
    line-height 24px
    margin-bottom 30px
