.isubscr
  display flex
  align-items center
  position relative
  width 100%
  height 400px
  color #fff
  background-repeat no-repeat
  background-size cover
  background-position 50% 50%
  overflow hidden
  &__content
    margin-left 104px
    max-width 487px
    transition transform 1s ease-in-out, opacity 1s ease-in-out, visibility 1s ease-in-out
  &__title
    text-transform none
    margin-bottom 28px
    letter-spacing -0.03em
  &__text
    font-family 'Roboto'
    font-size 16px
    line-height 24px
    margin-bottom 38px
