.plyr
  &--video
    width 100%
    height 100%

.igallery__slide-video svg {
  stroke: white;
}

.igallery__slide-video .plyr__control[hidden],
.igallery__slide-video .plyr__volume[hidden] {
  display: block !important;
}

.igallery__slide-video .plyr__control--overlaid {
  padding: 0;
  background: transparent;
  box-shadow: none;
}

.igallery__slide-video .plyr__control--overlaid svg {
  height: 104px;
  width: 104px;
  fill: transparent;
}

.igallery__slide-video .plyr__control--overlaid:hover svg {
  fill: white;
}

.igallery__slide-video .plyr__control--overlaid:focus,
.igallery__slide-video .plyr__control--overlaid:hover {
  background: transparent;
}

.igallery__slide-video .plyr__controls [data-plyr=play] {
  position: relative;
}

.igallery__slide-video .plyr__controls [data-plyr=play]:not(.plyr__control--pressed)::after {
  content: "";
  position: absolute;
  top: 0;
  left: 2px;
  width: calc(100% - .02em);
  height: 100%;
  background: no-repeat center;
  background-image: url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTMiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxMyAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBmaWxsLXJ1bGU9ImV2ZW5vZGQiIGNsaXAtcnVsZT0iZXZlbm9kZCIgZD0iTTAgMTZWMEwxMyA4TDAgMTZWMTZaIiBmaWxsPSJ3aGl0ZSIvPjwvc3ZnPg==');
}

.igallery__slide-video .plyr__controls [data-plyr=play] .icon--not-pressed {
  visibility: hidden;
}

.igallery__slide-video .show-controls .plyr__controls,
.igallery__slide-video .show-controls .plyr--hide-controls .plyr__controls,
.igallery__slide-video .show-controls .plyr--video.plyr--hide-controls .plyr__controls {
  transform: translateY(0);
  opacity: 1;
  pointer-events: auto;
  transition-delay: 0s;
}

.igallery__slide-video .plyr--video.plyr--hide-controls .plyr__controls {
  transition-delay: 1s;
}

.igallery__slide-video .plyr--video .plyr__controls {
  background: transparent;
  padding-bottom: 30px;
  max-width: 1008px;
  left: calc(50% - 504px);
  transform: translateY(0);
  opacity: 1;
}

@media screen and (max-width: 1024px){
  .igallery__slide-video .plyr--video .plyr__controls {
    width: 100%;
    left: 0;
    bottom: 0;
  }
}

.igallery__slide-video--hide-controls .plyr--video .plyr__controls,
.igallery__slide-video .plyr--video.plyr--hide-controls .plyr__controls {
    opacity: 0;
    pointer-events: none;
    transform: translateY(100%);
}

.igallery__slide-video .plyr--video .plyr__controls .plyr__control.plyr__tab-focus,
.igallery__slide-video .plyr--video .plyr__controls .plyr__control:hover,
.igallery__slide-video .plyr--video .plyr__controls .plyr__control[aria-expanded=true] {
  background: transparent;
}

.igallery__slide-video .plyr--video:fullscreen .plyr__controls {
  bottom: calc(50% - 430px);
}

.igallery__slide-video .plyr__time {
  font-family: "Roboto";
  line-height: 24px;
  font-size: 12px;
}

.igallery__slide-video .plyr__tooltip,
.igallery__slide-video .plyr__progress__buffer {
  display: none;
}

.igallery__slide-video .plyr__progress {
  position: relative;
}

.igallery__slide-video .plyr__progress::after {
  content: "";
  position: absolute;
  top: 10px;
  left: 0;
  width: 100%;
  height: 1px;
  pointer-events: none;
  background: #fff;
}

.igallery__slide-video input[type=range]:hover {
  cursor: pointer;
}

.igallery__slide-video input[type=range]::-webkit-slider-thumb {
  opacity: 0;
}

.igallery__slide-video input[type=range]::-moz-range-thumb {
  opacity: 0;
}

.igallery__slide-video input[type=range]::-ms-thumb {
  opacity: 0;
}

.igallery__slide-video input[type=range] {
  background: transparent !important;
  border-radius: 0 !important;
  margin-left: 0 !important;
  margin-right: 0 !important;
  width: 100% !important;
  box-shadow: none !important;
  outline: none !important;
  border: 0 !important;
  padding: 0 !important;
}

.igallery__slide-video input[type=range]::-webkit-slider-runnable-track {
  border-radius: 0 !important;
  height: 0.3rem !important;
  background-image: linear-gradient(to right, #fff var(--value, 0), transparent var(--value, 0)) !important;
}

.igallery__slide-video .plyr--full-ui.plyr--video input[type=range]::-webkit-slider-runnable-track {
  background-color: transparent !important;
}

.igallery__slide-video input[type=range]::-moz-range-track {
  border-radius: 0 !important;
  height: 0.3rem !important;
  background: transparent !important;
  color: transparent !important;
  box-shadow: none !important;
}

.igallery__slide-video input[type=range]::-moz-range-progress {
  background-color: #fff !important;
  border-radius: 0 !important;
  height: 0.3rem !important;
}

.igallery__slide-video input[type=range]::-ms-fill-lower {
  border-radius: 0 !important;
  height: 0.3rem !important;
  background: #fff !important;
  box-shadow: none !important;
}

.igallery__slide-video input[type=range]::-ms-fill-upper {
  border-radius: 0 !important;
  height: 0.3rem !important;
  background: transparent !important;
  opacity: 0 !important;
  color: transparent !important;
  box-shadow: none !important;
}

.igallery__slide-video input[type=range]:focus::-ms-fill-lower {
  background: #fff !important;
}

.igallery__slide-video input[type=range]:focus::-ms-fill-upper {
  background: transparent !important;
}

.igallery__slide-video__video video {
  width: 100%;
  height: 100%;
}

.plyr--full-ui input[type=range].plyr__tab-focus::-webkit-slider-runnable-track,
.plyr__control.plyr__tab-focus {
  box-shadow: none !important;
}

.plyr__volume {
  width: 32px !important;
  flex: 0 !important;
  position: relative !important;
  flex-basis: 32px !important;
}

.plyr--full-ui .plyr__volume input[type=range] {
  margin-top: 1.6rem !important;
  position: absolute !important;
  transform: rotate(-90deg);
  bottom: 22px;
  right: 0;
  left: 50% !important;
  margin-left: auto !important;
  margin-right: auto !important;
  width: 110px !important;
  transition: opacity 0.3s, visibility 0.3s;
  transform-origin: 0 50%;
}

.plyr__volume input[type=range] {
  opacity: 0;
  visibility: hidden;
}

.plyr__volume::after {
  content: "";
  position: absolute;
  bottom: 100%;
  left: 50%;
  width: 1px;
  height: 110px;
  pointer-events: none;
  background: #fff;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s, visibility 0.3s;
}

[data-plyr=mute]:hover+.plyr__volume input[type=range],
[data-plyr=mute]:hover+.plyr__volume::after,
[data-plyr=mute]:focus+.plyr__volume input[type=range],
[data-plyr=mute]:focus+.plyr__volume::after,
.plyr__volume:hover input[type=range],
.plyr__volume:hover::after {
  opacity: 1;
  visibility: visible;
}

.igallery__slide-video__plyr--hide-controls .plyr__controls {
  opacity: 0;
  pointer-events: none;
}

.igallery__slide-video__video {
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
}

.igallery__slide-video__preview {
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background: no-repeat center/cover;
  z-index: 2;
}

.igallery__slide-video__preview-inner {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}

.igallery__slide-video__preview-bg {
  width: 100%;
  height: 100%;
  background: no-repeat center/cover;
}

.igallery__slide-video__icon {
  position: relative;
  z-index: 3;
}

.igallery__slide-video__icon svg {
  height: 10.4rem;
  width: 10.4rem;
  fill: transparent;
  transition: fill 0.3s ease-in-out;
}

.igallery__slide-video__icon:hover {
  cursor: pointer;
}

.igallery__slide-video__icon:hover svg {
  fill: white;
}

.plyr__video-wrapper {
  display: flex;
  justify-content: center;
  width 100%
  position: absolute;
  left: 0;
  top: 50%;
  -webkit-transform translateY(-50%);
  transform translateY(-50%);
}

