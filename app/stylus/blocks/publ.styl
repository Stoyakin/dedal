.publ
  flex 1 1 auto
  background-color #f8f9fc
  width 100%
  transition box-shadow .3s ease-in-out, background .3s ease-in-out
  cursor pointer
  &:hover
    background-color #fff
    box-shadow 0 1.6rem 3.2rem rgba(0,0,0,.16)
  &--more
    display flex
    justify-content center
    align-items center
    background-color #fff
    &:hover
      box-shadow none
  &__more
    color $black
    font-weight 500
    font-size 16px
    line-height 20px
    text-transform uppercase
    transition opacity .3s ease-in-out
    &:hover
      opacity .7
  &__cover
    display block
    width 100%
    height 240px
    box-sizing border-box
    padding 32px 40px
    background no-repeat 50%/cover
  &__type
    opacity .8
    color $black
    font-weight 500
    font-size 12px
    letter-spacing .015em
    line-height 24px
    text-transform uppercase
  &__info
    display block
    position relative
    width 100%
    padding 32px 40px 40px
    word-break break-word
    &--pdf
      &:after
        content ''
        position absolute
        top 32px
        right 40px
        width 16px
        height 16px
        background-image url('data:image/svg+xml;base64,')
  &__date, &__title
    font-family 'Roboto'
    line-height 24px
  &__date
    color #636466
    font-size 14px
    margin-bottom .05em
  &__title
    color $black
    font-weight 500
    font-size 20px
    margin-bottom 16px
  &__text
    display block
    color #636466
    font-family 'Roboto'
    font-size 16px
    line-height 24px
