.form
  //&--subscr
  &__field
    position relative
    margin-bottom 25px
    &:last-child
      margin-bottom 0
    &-input, &-textarea
      width 100%
      height 30px
      color #636466
      font-family 'Roboto'
      line-height 30px
      font-size: 14px
      padding 0
      background transparent
      border none
      border-bottom 1px solid rgba(0,0,0,.4)
      border-radius 0
      transition border .3s ease-in-out
      outline none
      &:focus+.form__field-label,
      &.no-empty+.form__field-label
        opacity .7
        font-size 11px
        top -11px
    &-textarea
      resize none
      overflow hidden
      line-height 24px
      padding 2px 0
    &-label
      position absolute
      left 0
      top 10px
      color #636466
      font-family 'Roboto'
      line-height 16px
      font-size 14px
      transition opacity .3s ease-in-out,top .3s ease-in-out,font .3s ease-in-out
      pointer-events none
    &-submit
      .envelope-ico
        width 15px
        height 15px

