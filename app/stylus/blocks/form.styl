.form
  &--search
    position relative
    width 100%
    max-width 800px
    margin 9px auto 0
    opacity 0
    transform translateY(100px)
    .form__field
      display flex
      &-input
        padding-right 80px
      &-submit
        .i-search
          position relative
          top -3px
          left -4px
          width 20px
          height 17px
          path
            transition stroke .3s ease-in-out
    &-mobile
      opacity 1
      max-width none
      margin 32px 0 0
      transform none
  &--feed
    .form__field
      &-submit
        margin 11px auto 0
  &--subscr, &--search
    .form__field
      position relative
      &-input
        height 40px
        line-height 34px
        padding-bottom 6px
      &-submit
        position absolute
        right 0
        top 7px
        z-index 1
        padding-right 0
  &--subscr
    .form__field
      &-input
        padding-right 140px
        @media (max-width: 767px)
          padding-right 40px
      &-submit
        @media (max-width: 767px)
          font-size 0
          top 6px
  &--white
    .form__field
      &-input, &-textarea
        color #fff
        border-bottom 1px solid rgba(255,255,255,.4)
        &::-webkit-input-placeholder
          font-size 14px
          color #fff
        &:-ms-input-placeholder
          font-size 14px
          color #fff
        &::-ms-input-placeholder
          font-size 14px
          color #fff
        &::placeholder
          font-size 14px
          color #fff
      &-warning
        color #fff
      &-submit
        color #fff
        .envelope-ico
          margin-right 5px
          margin-top -4px
          width 22px
          height 16px
          stroke #fff
          @media (max-width: 767px)
            margin-right 0
  &--popup
    margin-top 64px
  &__agreement
    max-width 280px
    margin-left auto
    margin-right auto
    text-align center
    font-family 'Roboto'
    font-size 12px
    line-height 16px
    margin-top 10px
    color rgba(99,100,102,.4)
    a
      color rgba(99,100,102,.4)
      transition color .3s ease-in-out
      &:hover
        color rgba(99,100,102,.7)
  &__field
    position relative
    margin-bottom 27px
    &:last-child
      margin-bottom 0
    &+.form__agreement
      margin-top -8px
    &-input, &-textarea
      width 100%
      height 30px
      color #636466
      font-family 'Roboto'
      line-height 30px
      font-size: 14px
      padding 0
      background transparent
      border none
      border-bottom 1px solid rgba(0,0,0,.4)
      border-radius 0
      transition border .3s ease-in-out
      outline none
      &:focus+.form__field-label,
      &.no-empty+.form__field-label
        opacity .7
        font-size 11px
        top -11px
      &.error ~ .form__field-warning
        opacity 1
        visibility visible
    &-textarea
      resize none
      overflow hidden
      line-height 24px
      padding 2px 0
    &-label
      position absolute
      left 2px
      top 7px
      color #636466
      font-family 'Roboto'
      line-height 16px
      font-size 14px
      transition opacity .3s ease-in-out,top .3s ease-in-out,font .3s ease-in-out
      pointer-events none
      span
        display inline-block
        color rgba(99,100,102,.2)
        margin-left 8px
        pointer-events none
    &-warning
      position absolute
      width 100%
      left 0
      bottom -20px
      color #000
      font-size 11px
      line-height 16px
      text-align left
      padding-top .8px
      opacity 0
      visibility hidden
      //opacity .7
      transition bottom .3s ease-in-out, opacity .3s ease-in-out, visibility .3s ease-in-out
      z-index 1
    &-submit
      display flex
      align-items center
      justify-content center
      color #000
      font-family DIN W10 Medium,sans-serif
      font-weight 600
      line-height 24px
      font-size 12px
      letter-spacing .08em
      text-transform uppercase
      background transparent
      border-radius 0
      border none
      outline none
      user-select none
      transition opacity .3s ease-in-out
      &:disabled
        opacity: .7
      .air-ico
        margin-right 5px
        width 22px
        height 19px
        stroke #000
        transition stroke .3s ease-in-out

