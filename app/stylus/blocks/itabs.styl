.itabs
  padding-top 84px
  padding-bottom 80px
  &__nav
    display flex
    flex-wrap wrap
    justify-content center
    margin-bottom 30px
    &-item
      display block
      position relative
      max-width 592px
      width calc(100%/3 - 42.66px)
      margin 0 16px
      height 480px
      padding 63px 60px
      background-repeat no-repeat
      background-position 50% 50%
      background-size cover
      //opacity 0
      //transform translateY(100px)
      transition opacity 1s ease-in-out .4s, filter 1s ease-in-out .4s,transform 1s ease-in-out .3s, box-shadow .3s ease-in-out
      &:after
        content ""
        position absolute
        top 100%
        left calc(50% - 15px)
        display block
        width 30px
        height 13px
        background url('data:image/svg+xml;base64,') no-repeat center
        opacity 1
        pointer-events none
        visibility hidden
        transform translateY(-25px)
        transition opacity .2s ease-in-out, visibility .2s ease-in-out, transform .2s ease-in-out
        z-index 1
      &:hover
        .itabs__nav
          &-item
            &-href
              opacity 1
              transform translateY(0)
              pointer-events auto
      &--active
        &:after
          opacity 1
          visibility visible
          transform translateY(0)
          transition opacity .9s ease-in-out, visibility .9s ease-in-out, transform .9s ease-in-out
        .itabs__nav
          &-item
            &-title, &-text
              text-shadow 0 0 0.4rem rgba(0,0,0,.25)
              transition text-shadow .6s ease-in-out .4s, color .6s ease-in-out .4s, opacity .3s ease-in-out
            &-href
              opacity 1
              transform translateY(0)
              pointer-events auto
      &-info
        max-width 290px
        position relative
        z-index 3
      &-title
        transition text-shadow .6s ease-in-out,color .6s ease-in-out,opacity .3s ease-in-out
      &-text
        color #fff
        font 16px/24px 'Roboto'
        margin-top: 24px
        transition-property text-shadow,color
        transition-duration .6s
        transition-timing-function ease-in-out
      &-circle
        position absolute
        top calc(50% - 84px)
        left calc(50% - 38px)
        width 290px
        height 290px
        z-index 2
        &:before
          content ""
          position absolute
          bottom -34px
          right -42px
          width 592px
          height 480px
          background-repeat no-repeat
          background-position: 100% 100%
          background-size 100%
          background-image url('../../../../static/img/aim-shadow.png')
      &-video
        position absolute
        top 0
        left 0
        right 0
        bottom 0
        width 100%
        height 100%
        overflow hidden
        border-radius 100%
        min-width 100%
      &-href
        position absolute
        bottom 48px
        left 60px
        color #fff
        font-weight 500
        font-size 12px
        letter-spacing .025em
        line-height 16px
        text-transform uppercase
        opacity 0
        text-shadow 0 0 0.4rem rgba(0,0,0,.25)
        transform translateY(1rem)
        transition opacity .3s ease-in-out,transform .3s ease-in-out
        z-index 3
        &:hover
          opacity .7
  .swiper
    &-container
      overflow visible
    &-slide
      .product
        opacity .3
      &-active, &-next, &-next + .swiper-slide
        .product
          opacity 1
  .href-wrap
    margin-top 48px
