.footer
  position absolute
  left 0
  bottom 0
  width 100%
  z-index 1
  @media (max-width: 1365px)
    padding-left 30px
    padding-right 30px
  @media (max-width: 767px)
    padding-left 0
    padding-right 0
  &__top
    padding-bottom 41px
  &__row
    @media (max-width: 960px)
      flex-direction column
      margin 0
      width 100%
      height 200px
    @media (max-width: 500px)
      height auto
  &__col
    @media (max-width: 960px)
      width 200px
      margin 0 0 20px
      &:last-child
        margin-bottom 0
    @media (max-width: 500px)
      width 100%
    &.col--offset-2
      padding-left 21px
      @media (max-width: 1365px)
        padding-left 0
      @media (max-width: 960px)
        display flex
        margin-left 0
        flex-direction column
        align-items flex-start
        margin-left auto
  &__bottom
    display flex
    flex-wrap wrap
    padding 20px 0 27px
    border-top 1px solid rgba(#fff, .4)
    &-list
      display flex
      margin-left auto
      @media (max-width: 960px)
        flex-direction column
      @media (max-width: 500px)
        margin-left 0
        margin-top 20px
        width 100%
      &-item
        margin-right 25px
        @media (max-width: 960px)
          text-align right
          margin-right 0
        @media (max-width: 500px)
          text-align left
        &:last-child
          margin-right 0
      &-href
        color #fff
        font 300 12px/20px 'Roboto'
        letter-spacing: .045em
        transition opacity .3s ease-in-out
        &--active, &:hover
          opacity .7
  &__list
    margin-top -1px
    &-item
      margin-bottom 12px
      &:not(.footer__list-item--head)
        @media (max-width: 960px)
          display none
      &:last-child
        margin-bottom 0
      &--head
        margin-bottom 13px
        @media (max-width: 960px)
          margin-bottom 0
        .footer__list-item-href
          text-transform uppercase
          font-family DIN W10 Medium,sans-serif
          font-weight 600
          line-height 24px
          font-size 17px
          letter-spacing -.02em
      &-href
        color #fff
        font 300 14px/16px 'Roboto'
        letter-spacing .035em
        transition opacity .3s ease-in-out
        &:hover, &--active
          opacity .7
  &__phone
    display inline-block
    vertical-align top
    margin-bottom 12px
    color #fff
    font-size 19px
    line-height 24px
    font-family DIN W10 Medium,sans-serif
    font-weight 600
    text-transform uppercase
    transition opacity .3s ease-in-out
    &:hover
      opacity .7
  &__callback-href
    display inline-block
    vertical-align top
    color #fff
    font-size 12px
    line-height 16px
    font-family DIN W10 Medium,sans-serif
    font-weight 600
    letter-spacing 0.08em
    text-transform: uppercase
    transition opacity .3s ease-in-out
    &:hover
      opacity .7
  &__coopy
    color #fff
    font 300 13px/20px 'Roboto'
    margin-top 2px
  &__contacts
    margin-top 23px
    &:first-child
      margin-top 0
    &-item
      color #fff
      font 300 14px/16px 'Roboto'
      margin-bottom 16px
      letter-spacing: .035em
      &:last-child
        margin-bottom 0
      address
        color #fff
      a[href^="mailto"]
        color #fff
        transition opacity .3s ease-in-out
        &:hover
          opacity .7

