- var productDataDay = dataProdDay;
- var productDataNight = dataProdNight;
- var productDataThermal = dataProdThermal;

+b('section').itabs.js-tabs
  +e('ul').nav.js-scroll-anim
    +e('li').nav-item.--active(data-tabs-nav="day")
      +e('span').nav-item-cover(style="background-image: url('"+tmpsrc+"itabs-cover.jpg')")
      +e.nav-item-info
        +e('a')(href="#").nav-item-title.title.--white Дневная оптика
        +e('p').nav-item-text Оптические прицелы
      +e.nav-item-circle
        +e('video')(muted="muted" preload="auto" playsinline="" loop="loop" poster="static/video/tabs-video-poster.jpg").nav-item-video
          source(src="static/video/tabs-video.mp4" type="video/mp4")
      +e('a')(href="#").nav-item-href Вся дневная оптика
    +e('li').nav-item(data-tabs-nav="night")
      +e('span').nav-item-cover(style="background-image: url('"+tmpsrc+"itabs-cover2.jpg')")
      +e.nav-item-info
        +e('a')(href="#").nav-item-title.title.--white Ночная оптика
        +e('p').nav-item-text Приборы ночного видения, прицелы, предобъективные насадки
      +e.nav-item-circle
        +e('video')(muted="muted" preload="auto" playsinline="" loop="loop" poster="static/video/tabs-video-poster2.jpg").nav-item-video
          source(src="static/video/tabs-video2.mp4" type="video/mp4")
      +e('a')(href="#").nav-item-href Вся ночная оптика
    +e('li').nav-item(data-tabs-nav="thermal")
      +e('span').nav-item-cover(style="background-image: url('"+tmpsrc+"itabs-cover3.jpg')")
      +e.nav-item-info
        +e('a')(href="#").nav-item-title.title.--white Тепловизоры
        +e('p').nav-item-text Тепловизионные прицелы, приборы наблюдения, предобъективные насадки
      +e.nav-item-circle
        +e('video')(muted="muted" preload="auto" playsinline="" loop="loop" poster="static/video/tabs-video-poster3.jpg").nav-item-video
          source(src="static/video/tabs-video3.mp4" type="video/mp4")
      +e('a')(href="#").nav-item-href Все тепловизоры

  +e('ul').list.js-scroll-anim
    +e('li')(data-tabs-item="day").list-item.--active
      .container
        .swiper-container.js-swiper-product-vertical
          .swiper-wrapper
            +productTabs(dataProdDay)

        .href-wrap
          +e('a')(href="#").all-href.href-item
            span Вся дневная оптика

    +e('li')(data-tabs-item="night").list-item
      .container
        .swiper-container.js-swiper-product-vertical
          .swiper-wrapper
            +productTabs(dataProdNight)

        .href-wrap
          +e('a')(href="#").all-href.href-item
            span Вся ночная оптика

    +e('li')(data-tabs-item="thermal").list-item
      .container
        .swiper-container.js-swiper-product-vertical
          .swiper-wrapper
            +productTabs(dataProdThermal)

        .href-wrap
          +e('a')(href="#").all-href.href-item
            span Все тепловизоры

